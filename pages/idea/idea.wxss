/* pages/idea/idea.wxss */
.container{
  padding:75rpx 75rpx 0;
}
.container .label{
  font-size: 28rpx;
  color:#777;
  margin-bottom: 20rpx;
}
.container .place{
  color:#c0c0c0;
}
.container .content{
  margin-bottom: 200rpx;
}
.container textarea{
  font-size: 40rpx;
  line-height: 80rpx;
  height:240rpx;
}
.container input{
  font-size: 40rpx;
  line-height:56rpx;
  margin-bottom: 100rpx;
  color:#151515;
}
.container button{
  background-image: linear-gradient(135deg, #27dcc6 0%, #03a8d7 100%);
  color: #fff;
  font-size: 32rpx;
  line-height: 80rpx;
  text-align: center;
  box-shadow: 0 6rpx 14rpx 0 rgba(4,171,214,0.36);
  border-radius: 10rpx;
}