<!--pages/idea/idea.wxml-->
<view class="container">
  <form bindsubmit="formSubmit">
    <view class="label">您的留言</view>
    <view class="content">
      <textarea maxlength='200' name="content" value='{{content}}' style="color:{{color}}" bindfocus='focusTextarea' bindblur='blurTextarea'></textarea>
    </view>
    <view class="label">联系方式</view>
    <input type='text' name="contact" placeholder='请输入手机号' placeholder-class='place' value="{{contact}}"></input>
    <button formType="submit">确定</button>
  </form>
</view>
<van-notify id="van-notify" />
<van-dialog id="van-dialog" />