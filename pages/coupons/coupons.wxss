/* pages/coupons/coupons.wxss */

.container {
  padding: 130rpx 30rpx 30rpx;
  background: #f7f7f7;
}

.tab-wrap {
  padding-bottom: 16rpx;
}

.coupon-item {
  width: 100%;
  height: 214rpx;
  display: flex;
  align-items: center;
  position: relative;
  margin-top: 30rpx;
}

.coupon-item-img {
  width: 100%;
  height: 214rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 10;
  /* box-shadow: 0 6px 30px 0 rgba(0, 0, 0, 0.06); */
}

.cou-badge {
  border-radius: 20rpx;
  position: absolute;
  width:100%;
  height:100%;
  z-index: 100;
  background: rgba(255,255,255,.7);
  display: flex;
  justify-content: center;
  align-items: center;
}

.cou-badge image {
  width:92rpx;
  height: 92rpx;
}

.coupon-item-img image {
  width: 100%;
  height: 214rpx;
}

.coupon-item-main {
  display: flex;
  width: 100%;
  height: 100%;
  align-items: center;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 100;
}

.coupon-item-left {
  display: flex;
  flex: 0 0 186rpx;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #ff8973;
  width: 186rpx;
  height: 100%;
}
.coupon-item-left.store{
  color:#09c;
}
.number {
  font-weight: bold;
  font-family: DIN Condensed;
}

.number1 {
  font-size: 36rpx;
  line-height: 36rpx;
  position: relative;
  top: -40rpx;
}

.number2 {
  font-size: 100rpx;
}

.rule {
  font-size: 24rpx;
}

.title {
  color: #606060;
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
}

.date-group {
  font-size: 24rpx;
  color: #808080;
  line-height: 40rpx;
}

.handle {
  width: 125rpx;
  height: 48rpx;
  box-sizing: border-box;
  border-radius: 7rpx;
  font-size: 24rpx;
  color: #fff;
  background: #ff8973;
  text-align: center;
  line-height: 48rpx;
}

.handle.store {
  background: #04aad7;
}

.coupon-item-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 24rpx 24rpx 24rpx 32rpx;
  height: 100%;
  box-sizing: border-box;
}

