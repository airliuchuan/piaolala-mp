/* pages/order-confirm/order-confirm.wxss */

.container {
  padding: 18rpx 30rpx;
  padding-bottom: 120rpx;
}

.wrap {
  padding-bottom: 25rpx;
  box-shadow: 0 6px 30px 0 rgba(0, 0, 0, 0.06);
  border-radius: 20rpx;
}

.title {
  padding: 0 30rpx;
  height: 74rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.title image {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.title .provider {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  line-height: 26rpx;
  color: #151515;
}

.title .provider text {
  width: 46rpx;
  text-align: center;
  color: #fff;
  background: #1ad0ca;
  border-radius: 4rpx;
  font-size: 18rpx;
  line-height: 24rpx;
  margin-left: 20rpx;
}

.title navigator {
  display: flex;
  align-items: center;
  height: 74rpx;
  font-size: 24rpx;
  color: #808080;
}

.title navigator .icon {
  margin-right: 10rpx;
  margin-top:10rpx;
}

.goods-info {
  display: flex;
  margin: 50rpx 0 10rpx;
  padding: 0 30rpx;
}

.goods-info .pic {
  flex: 0 0 160rpx;
  width: 160rpx;
  height: 213rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 14rpx 0 rgba(128, 128, 128, 0.40);
  margin-right: 30rpx;
}

.goods-info .info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-info .goods-name {
  font-size: 36rpx;
  color: #151515;
  line-height: 40rpx;
  font-weight: bold;
  max-height: 80rpx;
}

.goods-info .cell {
  font-size: 24rpx;
  color: #151515;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods-info .cell .time{
  width:440rpx;
}

.location image {
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
}

.goods-info .pic image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.price-cell {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  position: relative;
}
.price-cell .price{
  width:380rpx;
}
.price-cell .num{
  position: absolute;
  right:0;
  top:-10rpx;
}
.price-cell text {
  font-size: 36rpx;
  color: #000;
}

.goods-total {
  padding-right: 30rpx;
  text-align: right;
}

.goods-total text {
  font-size: 40rpx;
  color: #ff8777;
  font-weight: bold;
}

.user-info .item {
  min-height: 138rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #dcdcdc;
  color:#151515;
}

.user-info .item .label {
  font-size: 30rpx;
  color: #151515;
}

.user-info .user-label {
  border: none;
}

.user-info .user-label .cell {
  height: 137rpx;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  border-bottom: 1rpx solid #dcdcdc;
}
.user-info .item .get-way{
  display: flex;
}
.user-info .item .get-item {
  background: #fff;
  border: 1px solid #dcdcdc;
  border-radius: 10rpx;
  line-height: 64rpx;
  width: 160rpx;
  text-align: center;
  font-size: 30rpx;
  color: #151515;
  margin-left:20rpx;
}
.user-info .item .get-item.active{
  color:#09c;
  border-color: #09c;
}

.user-info .item .add-adr {
  font-size: 28rpx;
  color: #c0c0c0;
}

.user-info .item .icon {
  vertical-align: baseline;
}

.user-info .change-adr {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
}

.user-info .item .adr {
  width: 400rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  color: #151515;
  text-align: right;
  margin-right: 25rpx;
}

.user-info .item .freight text {
  font-size: 36rpx;
  color: #ff8872;
}

.user-info .item input {
  text-align: right;
  margin-right: 18rpx;
  width: 300rpx;
}

.place-color {
  color: #c0c0c0;
}

.user-info .item .desc {
  padding: 24rpx;
  font-size: 26rpx;
  color: #808080;
  text-align: justify;
  background: #f5f5f5;
  border-radius: 10rpx;
  margin-bottom: 35rpx;
}

.user-info .phone {
  border-color: transparent;
}

.article {
  display: flex;
  line-height: 105rpx;
}

.article navigator {
  display: inline-block;
  color: #02a7d7;
}

.bottom {
  box-sizing: border-box;
  width: 100%;
  height: 98rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  padding-left: 30rpx;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  box-shadow: 0 -1px 20px 0 rgba(196, 196, 196, 0.39);
  font-size: 30rpx;
  color: #151515;
}

.bottom text {
  font-size: 40rpx;
  color: #ff8872;
  font-weight: bold;
}

.bottom .action {
  display: flex;
  align-items: center;
}

.action .unit {
  font-size: 24rpx;
  margin-right: 30rpx;
}

.wechat-pay {
  height: 98rpx;
  width: 240rpx;
  border-radius: 0;
  border: none;
  background-image: linear-gradient(135deg, #1acfca 0%, #03a8d7 100%);
  font-size: 32rpx;
  color: #fff;
  line-height: 98rpx;
}
.coupon-price{
  color:#ff8872;
  margin-right:25rpx;
  font-size: 36rpx;
}
