/* pages/order-detail/order-detail.wxss */

.container {
  padding: 18rpx 30rpx;
}

.wrap {
  padding-bottom: 25rpx;
  box-shadow: 0 6px 30px 0 rgba(0, 0, 0, 0.06);
  border-radius: 20rpx;
  margin-bottom: 10rpx;
}

.title {
  padding: 0 30rpx;
  height: 74rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.title image {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.title .provider {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  line-height: 26rpx;
  color: #151515;
}

.title .provider text {
  width: 46rpx;
  text-align: center;
  color: #fff;
  background: #1ad0ca;
  border-radius: 4rpx;
  font-size: 18rpx;
  line-height: 24rpx;
  margin-left: 20rpx;
}

.title navigator {
  display: flex;
  align-items: center;
  height: 74rpx;
  font-size: 24rpx;
  color: #808080;
}

.title navigator .icon {
  margin-right: 10rpx;
  margin-top:10rpx;
}

.goods-info {
  display: flex;
  margin: 50rpx 0 10rpx;
  padding: 0 30rpx;
}

.goods-info .pic {
  flex: 0 0 160rpx;
  width: 160rpx;
  height: 213rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 14rpx 0 rgba(128, 128, 128, 0.40);
  margin-right: 30rpx;
}

.goods-info .info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-info .goods-name {
  font-size: 36rpx;
  color: #151515;
  line-height: 40rpx;
  font-weight: bold;
  max-height: 80rpx;
}

.goods-info .cell {
  font-size: 24rpx;
  color: #151515;
  height: 110rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.location image {
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
}

.goods-info .pic image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.price-cell {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}

.price-cell text {
  font-size: 36rpx;
  color: #000;
}

.goods-total {
  padding-right: 30rpx;
  text-align: right;
}

.goods-total text {
  font-size: 40rpx;
  color: #ff8777;
  font-weight: bold;
}

.sub-title {
  font-size: 36rpx;
  color: #151515;
  font-weight: bold;
  margin: 65rpx 0 24rpx;
  display: flex;
}
.sub-title text{
  width:210rpx;
}
.table-item {
  display: flex;
  font-size: 30rpx;
  line-height: 80rpx;
}

.table-item .label {
  flex: 0 0 210rpx;
  width: 210rpx;
  color: #808080;
}

.table-item .cell {
  flex: 1;
  color: #151515;
  word-break: break-all;
}
.table-item .cell.status {
  color: #09c;
}

.table-item .cell.status1 {
  color: #ff8777;
}

.table-item navigator,.table-item .order-btn{
  display: inline-block;
  width: 126rpx;
  height: 50rpx;
  border: 1rpx solid #09c;
  color:#09c;
  border-radius: 9rpx;
  font-size: 24rpx;
  margin-left: 20rpx;
  line-height: 50rpx;
  text-align: center;
}

.contact{
  padding: 65rpx 0;
}
.contact button{
  background: transparent;
}
.contact text{
  font-size: 32rpx;
  color:#808080;
}
.contact image{
  display: inline-block;
  vertical-align: middle;
  width:60rpx;
  height:60rpx;
  margin-right:16rpx;
}
