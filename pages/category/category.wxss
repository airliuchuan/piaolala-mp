/* pages/category/category.wxss */

.sub-tab {
  width: 100%;
  height: 68rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sub-tab-item {
  width: 33.333333%;
  height: 100%;
  line-height: 68rpx;
  text-align: center;
  position: relative;
}

.sub-tab-item text {
  font-size: 26rpx;
  color: #151515;
}

.sub-tab-item image {
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-left: 8rpx;
}

.sub-tab-item::after {
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  content: '|';
  color: #dcdcdc;
}

.sub-tab-active text {
  color: #00a4d8;
}

.sub-tab-item:last-child::after {
  content: '';
}

.city-model {
  position: absolute;
  left: 0;
  top: 152rpx;
  width: 100%;
  z-index: 10;
}

.goods-list {
  padding-top: 182rpx;
  min-height: 100%;
}

.list {
  padding:152rpx 30rpx 0;
  background: #f6f6f6;
}

.list .item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 106rpx;
  color: #151515;
  border-bottom: 1rpx solid #dcdcdc;
}

.list .item-active {
  color: #00a4d8;
}
