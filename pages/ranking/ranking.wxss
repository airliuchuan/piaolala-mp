/* pages/ranking/ranking.wxss */

.ranking-list {
  padding: 80rpx 30rpx;
}

.ranking-item {
  border-radius: 16rpx;
  margin-bottom: 80rpx;
  box-shadow: 0 2px 40px 0 rgba(144, 144, 144, 0.19);
  padding: 0 30rpx 20rpx;
  position: relative;
}

.ranking-item .main {
  display: flex;
}

.pic {
  flex: 0 0 235rpx;
  width: 235rpx;
  height: 312rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 14rpx 0 rgba(128, 128, 128, 0.40);
  margin-top: -28rpx;
  margin-right: 24rpx;
}

.pic image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.ranking-name {
  position: absolute;
  width: 100%;
  left: 0;
  top: 20rpx;
  z-index: -1;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.ranking-name .name {
  display: flex;
  justify-content: flex-end;
  height: 54rpx;
  align-items: center;
}
.ranking-name .name .space{
  width:254rpx;
  height:54rpx;
  flex:0 0 254rpx;
}
.ranking-name .name .title {
  flex: 1;
  padding: 0 14rpx;
  font-size: 30rpx;
  color: #151515;
  display: flex;
  align-items: center;
  position: relative;
  height:54rpx;
}

.ranking-name .name .title::after {
  content: '';
  position: absolute;
  right: 0;
  top: 0;
  width: 0;
  height: 0;
  border-top: 28rpx solid rgba(0, 0, 0, 0);
  border-right: 20rpx solid #fff;
  border-bottom: 28rpx solid rgba(0, 0, 0, 0);
  border-left: 28rpx solid rgba(0, 0, 0, 0);
}
.ranking-name .name .title .text-overflow{
  width:280rpx;
}
.ranking-name .name .title .text {
  font-family: DIN Condensed;
  padding-top:12rpx;
  font-size: 48rpx;
  height:54rpx;
  overflow: hidden;
}

.ranking-name .name .title text {
  color: #00a4d8;
  line-height: 48rpx;
  margin-right: 10rpx;
}

.content {
  padding-top: 90rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.content .rate.second{
  margin-top:-5rpx;
}

.content .rate text {
  display: inline-block;
  font-size: 24rpx;
  color: #ff8777;
  vertical-align: bottom;
  margin-left: 14rpx;
}

.content .rate .label {
  margin-right: 36rpx;
  margin-left: 0;
  color:#151515;
}

.content .time, .content .upper {
  font-size: 24rpx;
  color: #151515;
}

.content .time text {
  margin-left: 30rpx;
}

.content .upper text {
  margin-left: 30rpx;
  font-size: 36rpx;
  color: #ff8973;
}

.location {
  max-width: 210rpx;
  font-size: 24rpx;
  color: #151515;
}

.location image {
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}

.ranking-item .bottom {
  position: relative;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.comment {
  background: #f6f6f6;
  font-size: 24rpx;
  color: rgba(128,128,128,0.8);
  height: 68rpx;
  line-height: 68rpx;
  padding: 0 25rpx;
  width: 360rpx;
  border-radius: 10rpx;
}

.ranking-item .comment::after {
  position: absolute;
  left: 0;
  top: -10rpx;
  content: '';
  width: 0;
  height: 0;
  border-top: 10rpx solid rgba(0, 0, 0, 0);
  border-left: 10rpx solid #f6f6f6;
  border-bottom: 10rpx solid rgba(0, 0, 0, 0);
  border-right: 10rpx solid rgba(0, 0, 0, 0);
}

.ranking-icon {
  position: absolute;
  top: -40rpx;
  right: 0;
  width: 90rpx;
  height: 90rpx;
}
