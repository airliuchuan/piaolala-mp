/* pages/przie/przie.wxss */

.container {
  background: #c00;
}

.rule {
  display: flex;
  justify-content: flex-end;
  padding: 0 30rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  color: #fff;
}

.count {
  text-align: center;
  margin: 20rpx 0;
  color: #fff;
}

.main {
  display: flex;
  justify-content: center;
}

.share {
  padding: 30rpx;
}

.share button {
  background-image: linear-gradient(135deg, #27dcc6 0%, #03a8d7 100%);
  color: #fff;
  font-size: 28rpx;
  line-height: 80rpx;
  text-align: center;
  box-shadow: 0 6rpx 14rpx 0 rgba(4, 171, 214, 0.36);
  border-radius: 10rpx;
  width: 80%;
  /* animation-name: scaleDraw; 关键帧名称
  animation-timing-function: ease-in-out; 动画的速度曲线
  animation-iteration-count: infinite; 动画播放的次数
  animation-duration: 3s; 动画所花费的时间 */
}

@keyframes scaleDraw {
  /*定义关键帧、scaleDrew是需要绑定到选择器的关键帧名称*/

  0% {
    transform: scale(1); /*开始为原始大小*/
  }

  25% {
    transform: scale(1.1); /*放大1.1倍*/
  }

  50% {
    transform: scale(1);
  }

  75% {
    transform: scale(1.1);
  }
}
