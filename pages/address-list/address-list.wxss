/* pages/address-list/address-list.wxss */

.address-list {
  padding: 40rpx 30rpx;
}

.address-list .item {
  padding: 16rpx 30rpx 22rpx;
  background: #fff;
  box-shadow: 0 6px 30px 0 rgba(0, 0, 0, 0.06);
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  position: relative;
}

.user-info {
  font-size: 30rpx;
  color: #151515;
  line-height: 60rpx;
  font-weight: bold;
}

.user-info text {
  margin-right: 45rpx;
}

.address-info {
  font-size: 30rpx;
  color: #151515;
  line-height: 48rpx;
  margin-top: 22rpx;
  margin-bottom: 36rpx;
  text-align: justify;
  word-break: break-all;
}

.bottom {
  display: flex;
  justify-content: flex-end;
}

.bottom>view {
  font-size: 28rpx;
  color: #00a4d8;
  line-height: 36rpx;
}

.bottom .del {
  margin-left: 78rpx;
}

.bottom image {
  display: inline-block;
  vertical-align: top;
  width: 36rpx;
  height: 36rpx;
  margin-right: 15rpx;
}

.address-list .item  .default {
  width: 92rpx;
  height: 92rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.address-edit {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 160rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.address-edit .edit {
  width: 400rpx;
  height: 80rpx;
  background-image: linear-gradient(135deg, #20dac6 0, #00a4d8 100%);
  box-shadow: 0 6rpx 14px 0 rgba(4, 171, 214, 0.36);
  border-radius: 9rpx;
  font-size: 32rpx;
  line-height: 80rpx;
  color: #fff;
  text-align: center;
}
