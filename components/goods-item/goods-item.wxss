/* components/goods-item/goods-item.wxss */

.clamp-overflow {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-all;
}

.goods-item navigator {
  display: flex;
  margin-bottom: 38rpx;
}
.goods-item:last-child navigator{
  margin-bottom: 0;
}
.goods-item .pic {
  width: 200rpx;
  height: 266rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 14rpx 0 rgba(128, 128, 128, 0.40);
  margin: 0 30rpx;
}

.goods-item .pic image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.goods-item .content {
  flex: 1;
  height: 266rpx;
  padding: 0 0rpx 35rpx 0rpx;
  border-bottom: 1rpx solid #dcdcdc;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-right: 30rpx;
}
.goods-item:last-child .content{
  border-color:transparent;
}
.goods-item .content .title {
  font-size: 30rpx;
  color: rgba(21, 21, 21, 1);
  line-height: 40rpx;
  font-weight: bold;
}

.goods-item .content .desc {
  border-left: 1px solid #00a4d8;
  display: flex;
  flex-direction: column;
  padding-left: 25rpx;
}

.goods-item .content .desc view {
  font-size: 24rpx;
  color: rgba(128, 128, 128, 1);
  line-height: 24rpx;
  display: flex;
  align-items: center;
}

.goods-item .content .desc view:first-child {
  margin-bottom: 28rpx;
}

.goods-item .content .bottom {
  display: flex;
  justify-content: space-between;
}

.goods-item .content .bottom .price {
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(21, 21, 21, 1);
  line-height: 33rpx;
  font-weight: bold;
}

.goods-item .content .bottom .price text {
  font-size: 36rpx;
  color: rgba(255, 137, 115, 1);
  line-height: 50rpx;
  margin-left: 15rpx;
  margin-right: 11rpx;
}

.goods-item .content .bottom .buy {
  width: 154rpx;
  height: 60rpx;
  background-image: linear-gradient(135deg, #27dcc6 0%, #03a8d7 100%);
  border-radius: 10rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(255, 255, 255, 1);
  line-height: 60rpx;
  text-align: center;
  box-shadow: 0 6rpx 14rpx 0 rgba(4, 171, 214, 0.36);
}

.presell{
  padding: 0 10rpx;
  height:24rpx;
  background: #ff8973;
  border-radius: 4rpx;
  color:#fff;
  font-size: 18rpx;
  line-height: 24rpx;
  margin-left: 18rpx;
  text-align: center;
}

.sell-num{
  padding: 0 6rpx;
  height:28rpx;
  color:#ff8973;
  border-radius: 4rpx;
  background:#fff0ee;
  font-size: 18rpx;
  line-height: 28rpx;
  text-align: center;
  margin-left:20rpx;
}
